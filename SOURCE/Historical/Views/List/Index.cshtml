@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RelicListViewModel
<div>
    <!--? Hero Start -->
    <div class="slider-area2 ">
        <div class="slider-height2 hero-overly d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero__caption hero__caption2">
                            <h2>Services</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!--? services area start -->

    <section class="services-section section-padding30 fix">
        <div class="container">

            <div class="row">

                @foreach (var list in Model.Relics)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="single-cat mb-40">
                            <div class="cat-icon">

                                <img src="/img/gallery/services7.png" alt="">
                            </div>
                            <div class="cat-cap">
                                <h5><a href="">@list.Name</a></h5>
                                <p>@list.Address</p>
                            </div>
                            <button class="btn btn-danger" onclick="Detail(@list.Id)">Xem chi tiết</button>
                        </div>
                    </div>
                }
            <button class="btn btn-danger" onclick="Detail(1)">Xem chi tiết</button>
            </div>
        </div>
        <div page-model="@Model.Pageinfo" page-ation="Index" page-class="btn" page-class-normal="btn-outline-dark"
             page-class-selected="btn-primary">
        </div>
    </section>
</div>
<script type="text/javascript">
    function Detail(id) {
        alert(id);
        $.ajax({
            url: 'List/Detail',
            data: { ID: id},
            type: 'POST',
            success: function (res) {

            }
        });
    }
</script>